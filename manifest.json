{
    "manifest_version": 3,
    "name": "Punctuation Corrector",
    "version": "1.0",
    "description": "Расширение для исправления пунктуации в пользовательском вводе с использованием OpenAI API",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "commands",
        "downloads"
    ],
    "host_permissions": [
        "https://api.openai.com/*"
    ],
    "action": {
        "default_icon": "X.COM_1.png",
        "default_popup": "popup.html"
    },
    "commands": {
        "fix-punctuation": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            },
            "description": "Fix punctuation"
        },
        "capture-screenshot": {
            "suggested_key": {
                "default": "Ctrl+I",
                "mac": "Command+I"
            },
            "description": "Capture screenshot"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
